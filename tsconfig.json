{
  "files": ["*.ts"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "tests", "**/*.config.js"],
  "exclude": ["**/node_modules/**"]
}